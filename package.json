{
  "name": "ms-mailer",
  "description": "microservice mailer, incorporates nodemailer functionality with a number of useful plugins over smtp pool transport and amqp messageing layer",
  "main": "./lib/index.js",
  "version": "10.0.0",
  "scripts": {
    "compile": "babel -d ./lib ./src",
    "prepublish": "yarn compile",
    "test": "yarn lint && yarn test:e2e",
    "test:e2e": "yarn compile && mdep test run",
    "lint": "eslint ./src",
    "start": "mfleet",
    "semantic-release": "semantic-release",
    "docker-release": "mdep docker release",
    "release": "yarn --frozen-lockfile && yarn semantic-release"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-mailer.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-strict-mode": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@makeomatic/deploy": "^10.1.1",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.4",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-makeomatic": "^4.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "smtp-server": "^3.5.0"
  },
  "dependencies": {
    "@hapi/hapi": "^19.1.0",
    "@microfleet/core": "^16.0.2",
    "@microfleet/transport-amqp": "^15.2.0",
    "@microfleet/validation": "^8.1.2",
    "bluebird": "^3.7.2",
    "common-errors": "^1.0.5",
    "is": "^3.2.0",
    "lodash": "^4.17.15",
    "ms-conf": "^6.0.0",
    "ms-mailer-templates": "^1.15.0",
    "nodemailer": "^6.4.2",
    "nodemailer-html-to-text": "^3.1.0",
    "nodemailer-mailgun-transport": "^2.0.0",
    "nodemailer-plugin-inline-base64": "^2.1.1",
    "nodemailer-sparkpost-transport": "^2.1.0",
    "prom-client": "^11.5.3",
    "stdout-stream": "^1.4.1",
    "yargs": "^15.1.0"
  },
  "engine": {
    "node": ">= 12.14.0",
    "npm": ">= 5.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./node_modules/@makeomatic/deploy/git-hooks/prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  },
  "mocha": {
    "require": [
      "@babel/register"
    ],
    "bail": true,
    "timeout": 20000,
    "reporter": "spec"
  }
}
