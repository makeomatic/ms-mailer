{
  "name": "ms-mailer",
  "description": "microservice mailer, incorporates nodemailer functionality with a number of useful plugins over smtp pool transport and amqp messageing layer",
  "main": "./lib/index.js",
  "scripts": {
    "compile": "./node_modules/.bin/babel -d ./lib ./src",
    "prepublish": "npm run compile",
    "test": "npm run lint && ./test/docker.sh",
    "lint": "eslint ./src",
    "start": "node ./bin/mservice.js | ./node_modules/.bin/bunyan -o short",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-mailer.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-mocha": "^4.5.1",
    "isparta": "^4.0.0",
    "istanbul": "=0.4.4",
    "json": "^9.0.4",
    "latest-version-cli": "^1.0.0",
    "mocha": "^3.0.2",
    "semantic-release": "^4.3.5",
    "smtp-server": "^1.14.2"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "bunyan": "^1.8.1",
    "common-errors": "^1.0.0",
    "is": "^3.1.0",
    "lodash": "^4.16.0",
    "ms-amqp-transport": "^4.0.0",
    "ms-conf": "^2.1.0",
    "ms-mailer-templates": "^0.12.0",
    "ms-validation": "^3.0.0",
    "mservice": "^4.0.2",
    "nodemailer": "^2.6.0",
    "nodemailer-dkim": "^1.0.4",
    "nodemailer-html-to-text": "^2.1.0",
    "nodemailer-mailgun-transport": "^1.2.2",
    "nodemailer-plugin-inline-base64": "^1.0.1",
    "nodemailer-sparkpost-transport": "^1.0.0"
  },
  "release": {
    "verifyConditions": []
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
