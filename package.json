{
  "name": "ms-mailer",
  "description": "microservice mailer, incorporates nodemailer functionality with a number of useful plugins over smtp pool transport and amqp messageing layer",
  "main": "./lib/index.js",
  "version": "8.1.1",
  "scripts": {
    "compile": "babel -d ./lib ./src",
    "prepublish": "yarn compile",
    "test": "yarn lint && yarn test:e2e",
    "test:e2e": "yarn compile && mdep test run",
    "lint": "eslint ./src",
    "start": "mfleet",
    "semantic-release": "semantic-release",
    "docker-release": "mdep docker release",
    "release": "yarn --frozen-lockfile && yarn semantic-release"
  },
  "keywords": [
    "microservice",
    "amqp",
    "nodemailer",
    "mailer",
    "smtp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-mailer.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-strict-mode": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@makeomatic/deploy": "^8.0.0",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/exec": "^3.1.3",
    "@semantic-release/git": "^7.0.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.0.0",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-config-makeomatic": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-promise": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "semantic-release": "^15.9.17",
    "smtp-server": "^3.4.7"
  },
  "dependencies": {
    "@microfleet/core": "^13.6.0",
    "@microfleet/transport-amqp": "^13.1.2",
    "@microfleet/validation": "^8.1.0",
    "bluebird": "^3.5.2",
    "bunyan": "^1.8.12",
    "common-errors": "^1.0.5",
    "hapi": "^18.1.0",
    "is": "^3.2.0",
    "lodash": "^4.17.11",
    "ms-conf": "^3.3.0",
    "ms-mailer-templates": "^1.5.0",
    "nodemailer": "^4.6.8",
    "nodemailer-html-to-text": "^3.0.0",
    "nodemailer-mailgun-transport": "^1.4.0",
    "nodemailer-plugin-inline-base64": "^2.1.1",
    "nodemailer-sparkpost-transport": "^2.1.0",
    "prom-client": "^11.2.1",
    "stdout-stream": "^1.4.1",
    "yargs": "^12.0.2"
  },
  "engine": {
    "node": ">= 8.9.0",
    "npm": ">= 5.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./node_modules/@makeomatic/deploy/git-hooks/prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  }
}
