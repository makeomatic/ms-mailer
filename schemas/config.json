{
  "$id": "config",
  "type": "object",
  "required": ["amqp"],
  "properties": {
    "debug": {
        "type": "boolean"
    },
    "amqp": {
      "type": "object",
      "required": ["transport", "router"],
      "additionalProperties": false,
      "properties": {
        "transport": {
          "required": ["neck"],
          "type": "object",
          "properties": {
            "neck": {
              "type": "integer",
              "min": 0
            },
            "headersExchange": {
              "type": "object",
              "properties": {
                "exchange": {
                  "type": "string"
                }
              }
            },
            "bindPersistantQueueToHeadersExchange": {
              "type": "boolean"
            }
          }
        },
        "router": {
          "type": "object"
        }
      }
    },
    "retry": {
      "type": "object",
      "properties": {
        "min": {
          "type": "integer"
        },
        "max": {
          "type": "object",
          "properties": {
            "filter": {
              "type": "string"
            },
            "production": {
              "type": "integer"
            },
            "test": {
              "type": "integer"
            },
            "default": {
              "type": "integer"
            }
          }
        },
        "factor": {
          "type": "number",
          "minimum": 1.01
        },
        "maxRetries": {
          "type": "object",
          "properties": {
            "filter": {
              "const": "$env"
            },
            "production": {
              "type": "integer",
              "minimum": 0
            },
            "test": {
              "type": "integer",
              "minimum": 0
            },
            "default": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "predefinedLimits": {
      "type": "object"
    },
    "htmlToText": {
      "type": "object"
    }
  },
  "switch": [{
    "if": {
      "required": ["amqp"],
      "properties": {
        "amqp": {
          "required": ["transport"],
          "properties": {
            "transport": {
              "required": ["bindPersistantQueueToHeadersExchange"],
              "properties": {
                "bindPersistantQueueToHeadersExchange": {
                  "const": true
                }
              }
            }
          }
        }
      }
    },
    "then": {
      "required": ["amqp"],
      "properties": {
        "amqp": {
          "required": ["transport"],
          "properties": {
            "transport": {
              "required": ["headersExchange"],
              "properties": {
                "headersExchange": {
                  "required": ["exchange"]
                }
              }
            }
          }
        }
      }
    },
    "continue": true
  }, {
    "if": {
      "required": ["retry"],
      "properties": {
        "retry": {
          "required": ["maxRetries"],
          "properties": {
            "maxRetries": {
              "const": 0
            }
          }
        }
      }
    },
    "then": {
      "required": ["amqp"],
      "properties": {
        "amqp": {
          "required": ["transport"],
          "properties": {
            "transport": {
              "required": ["bindPersistantQueueToHeadersExchange"],
              "properties": {
                "bindPersistantQueueToHeadersExchange": {
                  "const": false
                }
              }
            }
          }
        }
      }
    }
  }]
}
