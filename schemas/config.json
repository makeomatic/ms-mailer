{
  "$id": "config",
  "type": "object",
  "required": ["amqp"],
  "properties": {
    "debug": {
      "type": "boolean"
    },
    "amqp": {
      "type": "object",
      "required": ["transport", "router", "retry"],
      "additionalProperties": false,
      "properties": {
        "transport": {
          "required": ["neck"],
          "type": "object",
          "properties": {
            "neck": {
              "type": "integer",
              "min": 0
            }
          }
        },
        "router": {
          "type": "object"
        },
        "retry": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": true
            }
          }
        }
      }
    },
    "predefinedLimits": {
      "type": "object"
    },
    "htmlToText": {
      "type": "object"
    }
  }
}
